<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="matrix"
            android:src="@drawable/up_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/re_username"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:background="@drawable/background_gg"
                android:hint="用户名"
                android:textAlignment="center"
                android:textColor="#53DF4D"
                android:textColorHint="#53DF4D" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/re_password"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:background="@drawable/background_gg"
                android:hint="密码"
                android:textAlignment="center"
                android:textColor="#53DF4D"
                android:textColorHint="#53DF4D" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/re_phone"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:background="@drawable/background_gg"
                android:hint="手机号码"
                android:textAlignment="center"
                android:textColor="#53DF4D"
                android:textColorHint="#53DF4D" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/i_code"
                android:layout_width="220.5dp"
                android:layout_height="50dp"
                android:background="@drawable/background_wg"
                android:hint="验证码"
                android:textAlignment="center"
                android:textColor="#53DF4D"
                android:textColorHint="#53DF4D" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/background_gw"
                android:text="获取验证码"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/register_btn"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:background="@drawable/background_gw"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>