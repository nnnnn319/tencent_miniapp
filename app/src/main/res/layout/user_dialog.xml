<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_user_dialog_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:minWidth="200dp"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:id="@+id/create_user_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/dialog_new_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_wg"
                android:hint="手机号码"
                android:textAlignment="center"
                android:textColor="#53DF4D"
                android:textColorHint="#53DF4D" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/dialog_iCode"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:background="@drawable/background_wg"
                android:hint="验证码"
                android:password="true"
                android:textAlignment="center"
                android:textColor="#53DF4D"
                android:textColorHint="#53DF4D" />

            <Button
                android:id="@+id/dialog_code_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/background_gw"
                android:text="获取验证码"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/dialog_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_gw"
                android:text="提交"
                android:textColor="#fff"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/fix_phone_num_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#D81B1B" />
    </LinearLayout>

</RelativeLayout>