<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="#fff"
    tools:context=".market.SelectGoodsNumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:src="@drawable/land_icon5" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:paddingLeft="130dp"
                android:text="单价：0.02元"
                android:textColor="#4BDF45"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/product_number"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="85dp"
                android:paddingLeft="130dp"
                android:text="库存：980"
                android:textColor="#878B8F"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="12dp"
                android:text="数量"
                android:textColor="#000000"
                android:textSize="18sp" />


            <com.example.upfarm.cart.fragment.view.AddSubView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="合计："
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:textColor="#2ECD36"
                android:textSize="18sp" />

            <TextView
                android:id="@id/sure"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/background_gw"
                android:paddingTop="9dp"
                android:text="确定"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16dp" />
        </LinearLayout>

        <!--            <TextView-->
        <!--                android:id="@id/sure"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="36dp"-->
        <!--                android:layout_gravity="center"-->
        <!--                android:text="确定"-->
        <!--                android:textColor="#fff"-->
        <!--                android:textSize="18sp" />-->

    </LinearLayout>

</RelativeLayout>