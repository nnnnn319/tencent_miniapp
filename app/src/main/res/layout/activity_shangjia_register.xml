<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".user.fragment.ShangjiaRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#53DF4D">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:drawableLeft="@drawable/back_w"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="105dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="商家入驻"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/boder"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="11dp"
                android:paddingLeft="40dp"
                android:text="农场信息"
                android:textColor="#5d5d5d"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:drawableLeft="@drawable/land_icon1"
                    android:paddingLeft="29dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:text="农场名："
                    android:textColor="#5d5d5d"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_farm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:background="@null"
                    android:hint="请输入农场名"
                    android:textColor="#5d5d5d"
                    android:textColorHint="#bcbcbc"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/land_icon4"
                    android:paddingLeft="29dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:text="农场地址："
                    android:textColor="#5d5d5d"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_farm_address"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入农场详细地址"
                    android:paddingLeft="145dp"
                    android:textColor="#5d5d5d"
                    android:textColorHint="#bcbcbc"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-5dp"
                    android:drawableRight="@drawable/address" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/boder"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="11dp"
                android:paddingLeft="40dp"
                android:text="实名认证"
                android:textColor="#5d5d5d"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:drawableLeft="@drawable/land_icon5"
                    android:paddingLeft="29dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:text="真实姓名："
                    android:textColor="#5d5d5d"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:paddingLeft="145dp"
                    android:textColor="#5d5d5d"
                    android:textColorHint="#bcbcbc"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/land_icon3"
                    android:paddingLeft="29dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:text="身份证号："
                    android:textColor="#5d5d5d"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_identify_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入身份证号"
                    android:paddingLeft="145dp"
                    android:textColor="#5d5d5d"
                    android:textColorHint="#bcbcbc"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/boder"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="29dp"
                android:text="*"
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:paddingLeft="29dp"
                android:text="   请上传身份证、经营许可证、生产基地等有效审核图片"
                android:textColor="#5d5d5d"
                android:textSize="16sp" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginLeft="265dp"
                android:background="@drawable/background_gg"
                android:onClick="pickImages"
                android:paddingTop="10dp"
                android:text="上传"
                android:textAlignment="center"
                android:textColor="#2ECD36"
                android:textSize="16sp" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/result_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#3EA8A6A6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <Button
                android:id="@+id/submit_sj_re"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_marginLeft="235dp"
                android:background="@drawable/background_gw"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>