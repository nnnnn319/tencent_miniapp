<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/payV2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/background_gg"
            android:onClick="payV2"
            android:text="@string/pay_with_alipay"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/authV2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/background_gg"
            android:onClick="authV2"
            android:text="@string/auth_with_alipay"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/h5pay"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/background_gg"
            android:onClick="h5Pay"
            android:text="@string/web_to_native"
            android:textAllCaps="false" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/background_gg"
            android:onClick="showSdkVersion"
            android:text="@string/check_sdk_version"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:background="@drawable/background_wg"
            android:text="@string/demo_info_text"
            android:textColor="#5d5d5d" />
    </LinearLayout>

</ScrollView>